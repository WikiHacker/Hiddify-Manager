{
	{% if hconfigs['reality_enable'] %}
		"inbounds": [
			{% for d in domains if d['internal_port_special'] and d['mode']=='special_reality_xhttp' %}
				{%set domain=d['domain']%}
				{%set port=d['internal_port_special']%}
			{
				"tag":"realityin_{{port}}",
				// "port": {{port}}, // This is TLS entrypoint. This entrypoint does the SSL Termination then routes the request based on the Path or ALPN type.
				"listen": "@@realityin_{{port}}",
				"protocol": "vless",
				"settings": {
					"decryption": "none",
					"clients": [
						{% for u in users %}
							{"id": "{{ u['uuid'] }}", "email": "{{ u['uuid'] }}@hiddify.com"},
						{% endfor %}
					],
					"fallbacks": [
						
						{
							"dest": "@@http_in",
							"xver": 0
						}
					]
				},
				"streamSettings": {
					"network": "xhttp",
					
					"xhttpSettings": {
						"path": "/{{ hconfigs['path_vless'] }}{{ hconfigs['path_xhttp'] }}",
						"mode": "auto"
					},
					"sockopt": {
                    	"acceptProxyProtocol": true
                	},
					"security": "reality",
					"realitySettings": {
						"show": false, 
						"dest": "{{domain}}:443", 
						"xver": 0,
						"serverNames": [ 
							"{{domain}}"
						],
						"privateKey": "{{hconfigs['reality_private_key']}}",
						"shortIds": [ 
							"", 
							{%for sid in hconfigs['reality_short_ids'].split(',') %}
							"{{sid}}",
							{%endfor%}
						]
				}
				},
				"sniffing": {
				"enabled": true,
				"destOverride": ["http","tls","quic"]
				}
			},
			{%endfor%}	  
		]
	{% endif %}
}
